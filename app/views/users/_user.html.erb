<div class="container">
    <% @users.each do |user| %>
    <div class="row justify-content-md-center ">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    <%= link_to user.username, user_path(user)%>
                </div>
                <div class="card-body">
                    <h5 class="card-title"> <%= link_to user.username, user_path(user)%> </h5>
                    <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
                    <% if logged_in? && user==current_user %>
                    <button type="button" class="btn btn-outline-info"><%= link_to "Edit", edit_user_path(user), class: "text-secondary"%></button>
                    <% end %>
                    <button type="button" class="btn btn-outline-success"><%= link_to "View", user_path(user), class: "text-secondary"%></button>

                </div>
                <div class="card-footer text-muted">
                    <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
                </div>
            </div>
        </div>
    </div>

    <% end%>
</div>
</div>